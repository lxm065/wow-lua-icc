<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Frame name="CorrosionUI" parent="UIParent" toplevel="true" movable="true" enableMouse="true" hidden="true">
        <Size x="200" y="50"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Button name="$parentButton" inherits="UIPanelButtonTemplate">
                <Size x="100" y="30"/>
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        CorrosionSpell:ToggleCorrosion()
                    </OnClick>
                </Scripts>
                <NormalText text="Toggle Corrosion"/>
            </Button>
        </Frames>
    </Frame>
</Ui>